<Page x:Class="ComputerClub.SessionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сессии и брони">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок + обновить -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="Сессии и брони"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource AccentYellow}"
                       VerticalAlignment="Center"/>
            <Button Content="Обновить"
                    Margin="30,0,0,0" Padding="16,8"
                    Style="{StaticResource YellowActionButton}"
                    Click="Refresh_Click"/>
        </StackPanel>

        <!-- Вкладки -->
        <TabControl Grid.Row="1" Margin="0,0,0,16" Background="Transparent" BorderThickness="0">

            <!-- Активные сессии -->
            <TabItem Header="Активные сессии">
                <DataGrid x:Name="dgActiveSessions"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserSortColumns="True"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderInput}"
                          RowBackground="{StaticResource BgInput}"
                          AlternatingRowBackground="#161616"
                          BorderThickness="0"
                          RowHeaderWidth="0">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="Auto"/>
                            <Setter Property="MinHeight" Value="36"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding SessionID}" Width="70"/>
                        <DataGridTextColumn Header="Клиент" Binding="{Binding ClientFullName}" Width="260">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding ClientFullName}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Устройство" Binding="{Binding DeviceName}" Width="160"/>
                        <DataGridTextColumn Header="Начало" Binding="{Binding StartTime, StringFormat='{}{0:dd.MM HH:mm}'}" Width="140"/>
                        <DataGridTextColumn Header="Длительность" Binding="{Binding DurationFormatted}" Width="140">
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Тариф" Binding="{Binding TariffName}" Width="160"/>
                        <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost, StringFormat='{}{0:N0} ₽'}" Width="110"/>
                        <DataGridTemplateColumn Header="Действия" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Завершить"
                                            Style="{StaticResource FunButton}"
                                            Click="FinishSession_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Бронирования -->
            <TabItem Header="Бронирования">
                <DataGrid x:Name="dgReservations"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserSortColumns="True"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderInput}"
                          RowBackground="{StaticResource BgInput}"
                          AlternatingRowBackground="#161616"
                          BorderThickness="0"
                          RowHeaderWidth="0">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="Auto"/>
                            <Setter Property="MinHeight" Value="36"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ReservationID}" Width="70"/>
                        <DataGridTextColumn Header="Клиент" Binding="{Binding ClientFullName}" Width="260">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding ClientFullName}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Устройство" Binding="{Binding DeviceName}" Width="160"/>
                        <DataGridTextColumn Header="Начало" Binding="{Binding StartTime, StringFormat='{}{0:dd.MM HH:mm}'}" Width="140"/>
                        <DataGridTextColumn Header="Конец" Binding="{Binding EndTime, StringFormat='{}{0:dd.MM HH:mm}'}" Width="140"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource StatusTextBlock}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Действия" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Отменить"
                                            Style="{StaticResource FunButton}"
                                            Click="CancelReservation_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- История сессий -->
            <TabItem Header="История сессий">
                <DataGrid x:Name="dgHistory"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserSortColumns="True"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderInput}"
                          RowBackground="{StaticResource BgInput}"
                          AlternatingRowBackground="#161616"
                          BorderThickness="0"
                          RowHeaderWidth="0">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="Auto"/>
                            <Setter Property="MinHeight" Value="36"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding SessionID}" Width="70"/>
                        <DataGridTextColumn Header="Клиент" Binding="{Binding ClientFullName}" Width="260">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding ClientFullName}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Устройство" Binding="{Binding DeviceName}" Width="160"/>
                        <DataGridTextColumn Header="Начало" Binding="{Binding StartTime, StringFormat='{}{0:dd.MM HH:mm}'}" Width="140"/>
                        <DataGridTextColumn Header="Конец" Binding="{Binding EndTime, StringFormat='{}{0:dd.MM HH:mm}'}" Width="140"/>
                        <DataGridTextColumn Header="Длительность" Binding="{Binding DurationFormatted}" Width="140">
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost, StringFormat='{}{0:N0} ₽'}" Width="110"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource StatusTextBlock}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <!-- Нижняя информация -->
        <TextBlock x:Name="tbInfo" Grid.Row="2" Margin="0,16,0,0" FontSize="15"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource TextSecondary}"
                   Text="Загрузка данных..."/>
    </Grid>
</Page>