<Page x:Class="ComputerClub.DevicesManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Устройства и тарифы">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Устройства и тарифы"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource AccentYellow}"
                       VerticalAlignment="Center"/>
            <Button Content="Добавить устройство"
                    Style="{StaticResource YellowActionButton}"
                    Margin="30,0,0,0" Padding="20,10"
                    Click="AddDevice_Click"/>
            <Button Content="Обновить список"
                    Style="{StaticResource YellowActionButton}"
                    Margin="10,0,0,0" Padding="16,10"
                    Click="Refresh_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgDevices" Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserSortColumns="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="{StaticResource BorderInput}"
                  RowBackground="{StaticResource BgInput}"
                  AlternatingRowBackground="#161616"
                  BorderThickness="0"
                  RowHeaderWidth="0">

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Height" Value="Auto"/>
                    <Setter Property="MinHeight" Value="36"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding DeviceID}" Width="60"/>
                <DataGridTextColumn Header="Имя / №" Binding="{Binding Name}" Width="180">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Name}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource StatusTextBlock}">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <!-- Все цвета, жирность и триггеры уже в StatusTextBlock -->
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Тариф" Binding="{Binding TariffName}" Width="160">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="ToolTip" Value="{Binding TariffName}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Цена/час" Binding="{Binding PricePerHour, StringFormat='{}{0:N0} ₽'}" Width="110"/>
                <DataGridTextColumn Header="Характеристики" Binding="{Binding Specs}" Width="250">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Specs}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Расположение" Binding="{Binding Location}" Width="160">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Location}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Действия" Width="400">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Редактировать"
                                        Style="{StaticResource SmallActionButton}"
                                        Click="EditDevice_Click"/>
                                <Button Content="Удалить"
                                        Style="{StaticResource SmallActionButton}"
                                        Click="DeleteDevice_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock x:Name="tbSelectedInfo" Grid.Row="2" Margin="0,16,0,0" FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   Text="Выберите устройство..."/>
    </Grid>
</Page>