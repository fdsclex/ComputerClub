<Page x:Class="ComputerClub.MenuManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Меню и заказы">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок + кнопки -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="Меню и заказы"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource AccentYellow}"
                       VerticalAlignment="Center"/>
            <Button Content="Обновить"
                    Margin="30,0,0,0" Padding="16,8"
                    Style="{StaticResource YellowActionButton}"
                    Click="Refresh_Click"/>
            <Button Content="Добавить товар"
                    Margin="10,0,0,0" Padding="16,8"
                    Style="{StaticResource YellowActionButton}"
                    Click="AddItem_Click"/>
        </StackPanel>

        <!-- Фильтры -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
            <!-- Поиск по названию -->
            <StackPanel Orientation="Horizontal" Margin="0,0,32,0">
                <TextBlock Text="Поиск по названию:"
                           Style="{StaticResource FieldLabel}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <TextBox x:Name="tbSearchName"
                         Width="220"
                         Style="{StaticResource DarkInput}"
                         TextChanged="tbSearchName_TextChanged"/>
            </StackPanel>

            <!-- Фильтр по типу -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Тип товара:"
                           Style="{StaticResource FieldLabel}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <ComboBox x:Name="cbTypeFilter"
                          Width="140"
                          Style="{StaticResource DarkComboBox}"
                          SelectedIndex="0"
                          SelectionChanged="cbTypeFilter_SelectionChanged">
                    <ComboBoxItem Content="Все" Tag=""/>
                    <ComboBoxItem Content="Food" Tag="Food"/>
                    <ComboBoxItem Content="Drink" Tag="Drink"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Вкладки -->
        <TabControl Grid.Row="2" Background="Transparent" BorderThickness="0">
            <!-- Активные заказы -->
            <TabItem Header="Активные заказы">
                <DataGrid x:Name="dgActiveOrders"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserSortColumns="True"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderInput}"
                          RowBackground="{StaticResource BgInput}"
                          AlternatingRowBackground="#161616"
                          BorderThickness="0"
                          RowHeaderWidth="0">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="Auto"/>
                            <Setter Property="MinHeight" Value="36"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID заказа" Binding="{Binding OrderID}" Width="80"/>
                        <DataGridTextColumn Header="Клиент" Binding="{Binding ClientFullName}" Width="220">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding ClientFullName}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Дата/время" Binding="{Binding OrderDate, StringFormat='{}{0:dd.MM HH:mm}'}" Width="140"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource StatusTextBlock}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount, StringFormat='{}{0:N0} ₽'}" Width="110"/>
                        <DataGridTemplateColumn Header="Действия" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить"
                                            Style="{StaticResource FunButton}"
                                            Click="DeleteOrder_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Меню (товары) -->
            <TabItem Header="Меню (товары)">
                <DataGrid x:Name="dgMenuItems"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserSortColumns="True"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderInput}"
                          RowBackground="{StaticResource BgInput}"
                          AlternatingRowBackground="#161616"
                          BorderThickness="0"
                          RowHeaderWidth="0">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="Auto"/>
                            <Setter Property="MinHeight" Value="36"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding MenuItemID}" Width="60"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="280">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding Name}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="140"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat='{}{0:N0} ₽'}" Width="110"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="300">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding Description}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Доступно" Binding="{Binding Available}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource BooleanYesNoTextStyle}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Действия" Width="250">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Редактировать"
                                                Margin="4,2"
                                                Style="{StaticResource FunButton}"
                                                Click="EditItem_Click"/>
                                        <Button Content="Удалить"
                                                Margin="4,2"
                                                Style="{StaticResource FunButton}"
                                                Click="DeleteItem_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <!-- Нижняя информация -->
        <TextBlock x:Name="tbInfo" Grid.Row="3" Margin="0,16,0,0" FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   Text="Загрузка данных..."/>
    </Grid>
</Page>