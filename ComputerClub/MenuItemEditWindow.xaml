<Window x:Class="ComputerClub.MenuItemEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара"
        Height="750" Width="600"  
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="{StaticResource BgVeryDark}"
        Foreground="{StaticResource TextPrimary}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактирование товара"
                   FontSize="26" FontWeight="Bold"
                   Foreground="{StaticResource AccentYellow}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,32"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,32">
            <TextBlock Text="Название" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="tbName" Style="{StaticResource DarkInput}"/>

            <TextBlock Text="Тип (Food / Drink)" Style="{StaticResource FieldLabel}"/>
            <ComboBox x:Name="cbType" Style="{StaticResource DarkComboBox}">
                <ComboBoxItem Content="Food"/>
                <ComboBoxItem Content="Drink"/>
            </ComboBox>

            <TextBlock Text="Цена (₽)" Style="{StaticResource FieldLabel}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Ползунок -->
                <Slider x:Name="sliderPrice"
                        Grid.Column="0"
                        Minimum="0" Maximum="1000"
                        Value="100"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        Margin="0,8,12,8"
                        VerticalAlignment="Center"/>

                <!-- Текстовое поле с текущим значением -->
                <TextBox x:Name="tbPrice" Grid.Column="1"
                         Width="80" Style="{StaticResource DarkInput}"
                         Text="{Binding ElementName=sliderPrice, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"/>
            </Grid>

            <TextBlock Text="Описание" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="tbDescription" 
                     Style="{StaticResource DarkInput}"
                     AcceptsReturn="True"
                     Height="100"
                     TextWrapping="Wrap"/>

            <TextBlock Text="Доступно" Style="{StaticResource FieldLabel}"/>
            <CheckBox x:Name="cbAvailable" Margin="0,8,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена"
                    Width="120" Height="48" Margin="0,0,16,0"
                    Style="{StaticResource YellowActionButton}"
                    Click="Cancel_Click"/>

            <Button Content="Сохранить"
                    Width="140" Height="48"
                    Style="{StaticResource YellowActionButton}"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>