<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Основные цвета – очень тёмная тема -->
    <SolidColorBrush x:Key="BgVeryDark"     Color="#0A0A0A"/>
    <!-- почти чёрный фон -->
    <SolidColorBrush x:Key="BgInput"        Color="#121212"/>
    <!-- чуть светлее для полей -->
    <SolidColorBrush x:Key="BorderInput"    Color="#2A2A2A"/>
    <!-- границы полей -->
    <SolidColorBrush x:Key="TextPrimary"    Color="#F5F5F5"/>
    <!-- основной белый текст -->
    <SolidColorBrush x:Key="TextSecondary"  Color="#AAAAAA"/>
    <!-- подписи, серый -->
    <SolidColorBrush x:Key="AccentYellow"   Color="#FFEA00"/>
    <!-- яркий жёлтый, как в старых клубных ПО -->
    <SolidColorBrush x:Key="AccentYellowHover" Color="#FFFF4D"/>
    <!-- при наведении -->
    <SolidColorBrush x:Key="AccentYellowPressed" Color="#FFD700"/>
    <!-- при нажатии -->

    <!-- Стиль окна по умолчанию -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BgVeryDark}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontFamily" Value="Segoe UI, Arial"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Width" Value="820"/>
        <Setter Property="Height" Value="620"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="AllowsTransparency" Value="False"/>
    </Style>

    <!-- Крупный заголовок или "BootCamp Pro" -->

    <Style x:Key="SubHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,-20,0,50"/>
    </Style>

    <!-- Номер ПК слева сверху (для клиента on-site) -->
    <Style x:Key="PcNumberLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="70"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource AccentYellow}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <!-- Подписи к полям ввода -->
    <Style x:Key="FieldLabel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="0,12,0,4"/>
    </Style>

    <!-- Поля ввода (TextBox / PasswordBox) -->
    <Style x:Key="DarkInput" TargetType="Control">
        <Setter Property="Background" Value="{StaticResource BgInput}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderInput}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
        <Setter Property="Height" Value="44"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="15"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource AccentYellow}"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource DarkInput}"/>
    <Style TargetType="PasswordBox" BasedOn="{StaticResource DarkInput}"/>

    <!-- ЖЁЛТАЯ КНОПКА – теперь с правильным стилем -->
    <Style x:Key="YellowActionButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentYellow}"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="30,12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinWidth" Value="240"/>
        <Setter Property="Height" Value="56"/>
        <Setter Property="Margin" Value="0,12,0,12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentYellowHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentYellowPressed}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.4"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Текстовые ссылки -->
    <Style x:Key="LinkStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#4DA6FF"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="TextDecorations" Value="Underline"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#99CCFF"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Нижний футер (язык + powered by) -->
    <Style x:Key="FooterText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#555555"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Стиль для кнопки "глазик" рядом с паролем -->
    <!-- Стиль для кнопки "глазик / глаз зачёркнутый" -->
    <Style x:Key="PasswordToggleButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#AAAAAA"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        <!-- для поддержки символов -->
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
        <Setter Property="Padding" Value="0"/>

        <!-- По умолчанию — открытый глаз -->
        <Setter Property="Content" Value="👁"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Переключение состояния: когда пароль виден → зачёркнутый глаз -->
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsPasswordVisible, RelativeSource={RelativeSource AncestorType=Page}}" 
                     Value="True">
                <Setter Property="Content" Value="✗"/>
            </DataTrigger>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource AccentYellow}"/>
            </Trigger>

            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Foreground" Value="{StaticResource AccentYellowPressed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <!-- Стиль для RadioButton (пол) -->
    <Style x:Key="GenderRadioButton" TargetType="RadioButton">
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid VerticalAlignment="Center" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Внешний кружок (обводка) -->
                        <Ellipse x:Name="OuterCircle"
                             Width="20"
                             Height="20"
                             Stroke="#555555"
                             StrokeThickness="2"
                             />

                        <!-- Внутренний заполненный кружок (меньше, чтобы не заливал обводку) -->
                        <Ellipse x:Name="InnerCircle"
                             Width="12"
                             Height="12"
                             Fill="{StaticResource AccentYellow}"
                             Opacity="0"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>

                        <!-- Текст -->
                        <ContentPresenter Grid.Column="1"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Наведение -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterCircle" Property="Stroke" Value="{StaticResource AccentYellow}"/>
                        </Trigger>

                        <!-- Выбран -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="OuterCircle" Property="Stroke" Value="{StaticResource AccentYellow}"/>
                            <Setter TargetName="InnerCircle" Property="Opacity" Value="1"/>
                        </Trigger>

                        <!-- Отключён -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#666666"/>
                            <Setter TargetName="OuterCircle" Property="Stroke" Value="#444444"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>