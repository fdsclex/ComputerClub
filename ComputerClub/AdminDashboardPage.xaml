<Page x:Class="ComputerClub.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ComputerClub"
      Title="Админ-панель">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <!-- Левое меню фиксированной ширины -->
            <ColumnDefinition Width="*"/>
            <!-- Правая часть — контент -->
        </Grid.ColumnDefinitions>

        <!-- Левое меню (sidebar) -->
        <Border Grid.Column="0" Background="#1E1E2E" BorderBrush="#333" BorderThickness="0,0,1,0">
            <StackPanel Margin="12">
                <!-- Заголовок / логотип -->
                <TextBlock Text="Админ-панель"
                           FontSize="22" FontWeight="SemiBold"
                           Foreground="{StaticResource AccentYellow}"
                           Margin="0,20,0,40" HorizontalAlignment="Center"/>

                <!-- Навигационные пункты (используем RadioButton для визуального выделения активного) -->
                <RadioButton x:Name="rbMap" Content="Карта клуба" Style="{StaticResource NavRadioButton}"
                             IsChecked="True" Margin="0,0,0,8" Click="NavButton_Click" Tag="ClubMapPage"/>
                <RadioButton x:Name="rbDevices" Content="Устройства и тарифы" Style="{StaticResource NavRadioButton}"
                             Margin="0,0,0,8" Click="NavButton_Click" Tag="DevicesManagementPage"/>
                <RadioButton x:Name="rbSessions" Content="Сессии и брони" Style="{StaticResource NavRadioButton}"
                             Margin="0,0,0,8" Click="NavButton_Click" Tag="SessionsPage"/>
                <RadioButton x:Name="rbMenu" Content="Меню и заказы" Style="{StaticResource NavRadioButton}"
                             Margin="0,0,0,8" Click="NavButton_Click" Tag="MenuManagementPage"/>
                <RadioButton x:Name="rbClients" Content="Клиенты" Style="{StaticResource NavRadioButton}"
                             Margin="0,0,0,8" Click="NavButton_Click" Tag="ClientsPage"/>
                <RadioButton x:Name="rbReports" Content="Отчёты и финансы" Style="{StaticResource NavRadioButton}"
                             Margin="0,0,0,40" Click="NavButton_Click" Tag="ReportsPage"/>

                <!-- Выход внизу -->
                <Button Content="Выйти" Style="{StaticResource YellowActionButton}"
                        Background="#D32F2F" Foreground="White"
                         Click="Logout_Click"/>
            </StackPanel>
        </Border>

        <!-- Правая часть — Frame для загрузки страниц -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"
               Background="Transparent" Source="{x:Null}"/>
    </Grid>
</Page>