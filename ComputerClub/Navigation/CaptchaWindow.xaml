<Window x:Class="ComputerClub.Navigation.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение" Height="300" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False">

    <Border Background="#1E1E1E" BorderBrush="#444444" BorderThickness="2" CornerRadius="8">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Введите символы с картинки" 
                       FontSize="16" FontWeight="SemiBold" Foreground="White"
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <Border Grid.Row="1" Background="#2A2A2A" BorderBrush="#555555" BorderThickness="1" CornerRadius="6">
                <Canvas x:Name="captchaCanvas" ClipToBounds="True"/>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBox x:Name="tbInput" Width="180" FontSize="18" Padding="8" MaxLength="6" KeyDown="TbInput_KeyDown"/>
                <Button Content="Подтвердить" Width="120" Margin="20,0,0,0" Click="ConfirmCaptcha_Click"/>
                <Button Content="Обновить" Width="100" Margin="10,0,0,0" Click="RefreshCaptcha_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>