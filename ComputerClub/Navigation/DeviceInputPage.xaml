<Page x:Class="ComputerClub.Navigation.DeviceInputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <StackPanel Width="340" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введите номер места" 
                       FontSize="22" Foreground="{StaticResource AccentYellow}"
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBox x:Name="tbDeviceNumber" 
                     FontSize="18" TextAlignment="Center"/>

            <Button Content="ПОДТВЕРДИТЬ" 
                    Style="{StaticResource YellowActionButton}"
                    Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Page>