<Page x:Class="ComputerClub.ClubMapPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Карта клуба">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Карта клуба — состояние устройств"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource AccentYellow}"
                       VerticalAlignment="Center"/>
            <Button Content="Обновить"
                    Margin="30,0,0,0" Padding="16,8"
                    Style="{StaticResource YellowActionButton}" Click="Refresh_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgDevices" Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserSortColumns="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="{StaticResource BorderInput}"
                  RowBackground="{StaticResource BgInput}"
                  AlternatingRowBackground="#161616"
                  BorderThickness="0"
                  RowHeaderWidth="0">

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Height" Value="Auto"/>
                    <Setter Property="MinHeight" Value="36"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding DeviceID}" Width="60"/>
                <DataGridTextColumn Header="Имя / №" Binding="{Binding Name}" Width="180">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Name}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource StatusTextBlock}">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <!-- Все цвета и жирность уже в StatusTextBlock -->
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Тариф" Binding="{Binding TariffName}" Width="160">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="ToolTip" Value="{Binding TariffName}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Клиент" Binding="{Binding CurrentClientFullName}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding CurrentClientFullName}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Время сессии" Binding="{Binding SessionDuration}" Width="140"/>
                <DataGridTemplateColumn Header="Действия" Width="400">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="Завершить"
                                        Style="{StaticResource SmallActionButton}"
                                        Click="FinishSession_Click"/>
                                <Button Content="Заморозить"
                                        Style="{StaticResource SmallActionButton}"
                                        Click="FreezeSession_Click"/>
                                <Button Content="Тех.режим"
                                        Style="{StaticResource SmallActionButton}"
                                        Click="SetMaintenance_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock x:Name="tbSelectedInfo" Grid.Row="2" Margin="0,16,0,0" FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   Text="Выберите устройство..."/>
    </Grid>
</Page>