<Window x:Class="ComputerClub.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пополнение баланса" Height="350" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="{StaticResource BgVeryDark}"
        Foreground="{StaticResource TextPrimary}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="tbTitle" Grid.Row="0" 
                   Text="Введите сумму пополнения:"
                   FontSize="20" FontWeight="SemiBold"
                   TextWrapping="Wrap"
                   Margin="0,0,0,12"/>

        <!-- Текущий баланс -->
        <TextBlock x:Name="tbCurrentBalance" Grid.Row="1" 
                   FontSize="16" Margin="0,0,0,20"
                   TextWrapping="Wrap"/>

        <!-- Большое поле ввода суммы -->
        <TextBox x:Name="tbAmount" Grid.Row="2"
                 Style="{StaticResource DarkInput}"
                 Text="100"
                 FontSize="24" FontWeight="Bold"
                 Padding="20,10"
                 Height="60"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Left"
                 PreviewTextInput="tbAmount_PreviewTextInput"
                 />

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Width="140" Height="50" Margin="0,0,16,0"
                    Style="{StaticResource YellowActionButton}"
                    FontSize="16"
                    Click="Cancel_Click"/>
            <Button Content="Пополнить" Width="180" Height="50"
                    Style="{StaticResource YellowActionButton}"
                    FontSize="16" FontWeight="Bold"
                    Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>