<Window x:Class="ComputerClub.DeviceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование устройства"
        Height="850" Width="850"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"                  
    Background="{StaticResource BgVeryDark}"
        Foreground="{StaticResource TextPrimary}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок (свой, без системной рамки) -->
        <TextBlock Text="Редактирование устройства"
                   FontSize="26" FontWeight="Bold"
                   Foreground="{StaticResource AccentYellow}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,32"/>

        <!-- Основные поля -->
        <StackPanel Grid.Row="1" Margin="0,0,0,32">
            <TextBlock Text="Имя / №" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="tbName" Style="{StaticResource DarkInput}"/>

            <TextBlock Text="Тип" Style="{StaticResource FieldLabel}"/>
            <ComboBox x:Name="cbType" Style="{StaticResource DarkComboBox}">
                <ComboBoxItem Content="PC"/>
                <ComboBoxItem Content="Console"/>
            </ComboBox>

            <TextBlock Text="Тариф" Style="{StaticResource FieldLabel}"/>
            <ComboBox x:Name="cbTariff"
                      DisplayMemberPath="Name"
                      SelectedValuePath="TariffID"
                      Style="{StaticResource DarkComboBox}"/>

            <TextBlock Text="Характеристики" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="tbSpecs"
                     Style="{StaticResource DarkInput}"
                     AcceptsReturn="True"
                     Height="90"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="Расположение (стол/зона)" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="tbLocation" Style="{StaticResource DarkInput}"/>

            <TextBlock Text="Статус" Style="{StaticResource FieldLabel}"/>
            <ComboBox x:Name="cbStatus" Style="{StaticResource DarkComboBox}">
                <ComboBoxItem Content="Available"/>
                <ComboBoxItem Content="InUse"/>
                <ComboBoxItem Content="Reserved"/>
                <ComboBoxItem Content="Maintenance"/>
                <ComboBoxItem Content="Offline"/>
            </ComboBox>
        </StackPanel>

        <!-- Кнопки внизу -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена"
                    Width="120" Height="48" Margin="0,0,16,0"
                    Style="{StaticResource YellowActionButton}"
                    Click="Cancel_Click"/>

            <Button Content="Сохранить"
                    Width="140" Height="48"
                    Style="{StaticResource YellowActionButton}"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>