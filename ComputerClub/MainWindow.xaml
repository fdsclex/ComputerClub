<Window x:Class="ComputerClub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BootCamp Pro"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BgVeryDark}"
        xmlns:local="clr-namespace:ComputerClub">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Контент -->
            <RowDefinition Height="48"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header (может быть скрыт в режиме капчи) -->
        <Border x:Name="headerBorder" Grid.Row="0" Background="#111111" BorderThickness="0,0,0,1" BorderBrush="#222222">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Номер ПК -->
                <TextBlock x:Name="tbPcNumber"
                           Style="{StaticResource PcNumberLabel}"
                           Visibility="Collapsed"
                           VerticalAlignment="Center"/>

                <!-- Название -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="BootCamp Pro" Style="{StaticResource SubHeader}" Margin="0,-15,0,0"/>
                </StackPanel>

                <!-- Кнопка Назад -->
                <Button x:Name="btnBack"
                        Content="← Назад"
                        Style="{StaticResource YellowActionButton}"
                        Width="140" Height="42"
                        Visibility="Collapsed"
                        Click="btnBack_Click"
                        Grid.Column="2" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Background="Transparent"/>

        <!-- Footer (может быть скрыт в режиме капчи) -->
        <Border x:Name="footerBorder" Grid.Row="2" Background="#0D0D0D" BorderThickness="0,1,0,0" BorderBrush="#222222">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Powered by LAN GAME SOFTWARE v3.1.8.0"
                           Foreground="#444444" FontSize="12"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Русский ▼" Foreground="#AAAAAA" Margin="0,0,40,0"
                               MouseLeftButtonDown="Language_MouseDown"/>
                    <TextBlock x:Name="tbTime" Foreground="#AAAAAA" FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>