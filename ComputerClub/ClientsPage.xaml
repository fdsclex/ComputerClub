<Page x:Class="ComputerClub.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Клиенты">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок + обновить -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="Клиенты"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource AccentYellow}"
                       VerticalAlignment="Center"/>
            <Button Content="Обновить"
                    Margin="30,0,0,0" Padding="16,8"
                    Style="{StaticResource YellowActionButton}"
                    Click="Refresh_Click"/>
        </StackPanel>

        <!-- Поиск по телефону -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="Поиск по телефону:" 
                       Style="{StaticResource FieldLabel}" 
                       VerticalAlignment="Center" 
                       Margin="0,0,12,0"/>
            <TextBox x:Name="tbSearchPhone" 
                     Width="200"
                     Style="{StaticResource DarkInput}"
                     TextChanged="tbSearchPhone_TextChanged"/>
        </StackPanel>

        <!-- Таблица клиентов -->
        <DataGrid x:Name="dgClients" Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserSortColumns="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="{StaticResource BorderInput}"
                  RowBackground="{StaticResource BgInput}"
                  AlternatingRowBackground="#161616"
                  BorderThickness="0"
                  RowHeaderWidth="0">

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Height" Value="Auto"/>
                    <Setter Property="MinHeight" Value="36"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ClientID}" Width="60"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="280">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding FullName}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="160"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="220">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Email}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Баланс" Binding="{Binding Balance, StringFormat='{}{0:N0} ₽'}" Width="110"/>
                <DataGridTextColumn Header="Дата регистрации" Binding="{Binding RegistrationDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="140"/>
                <DataGridTemplateColumn Header="Действия" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Пополнить"
                                        Margin="4,2"
                                        Style="{StaticResource FunButton}"
                                        Click="ReplenishBalance_Click"/>
                                <Button Content="Удалить"
                                        Margin="4,2"
                                        Style="{StaticResource FunButton}"
                                        Click="DeleteClient_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Нижняя информация -->
        <TextBlock x:Name="tbInfo" Grid.Row="3" Margin="0,16,0,0" FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   Text="Загрузка данных..."/>
    </Grid>
</Page>